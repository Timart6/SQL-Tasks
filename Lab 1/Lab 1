1.	A) DROP DATABASE `test`
B) CREATE DATABASE `DB`
C) CREATE TABLE IF NOT EXISTS books (
    `N` INT NOT NULL AUTO_INCREMENT,
    `Code` INT (4) NOT NULL,
    `IsNew` INT (1),
    `Name` VARCHAR(150) CHARACTER SET utf8,
    `Price` FLOAT,
    `Publisher` VARCHAR(52) CHARACTER SET utf8,
    `Pages` INT(4),
    `Format` VARCHAR(9) CHARACTER SET utf8,
    `Date` DATE,
    `Edition` INT,
    `Theme` VARCHAR(48) CHARACTER SET utf8,
    `Category` VARCHAR(48) CHARACTER SET utf8,
    PRIMARY KEY(N)
);
D) CREATE INDEX N_Index ON books(N);
